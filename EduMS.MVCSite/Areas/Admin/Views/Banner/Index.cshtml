@model IEnumerable<EduMS.Dto.BannerInfoDto>
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <!--[if lt IE 9]>
    <script type="text/javascript" src="~/Content/Admin/js/html5.js"></script>
    <script type="text/javascript" src="~/Content/Admin/js/respond.min.js"></script>
    <script type="text/javascript" src="~/Content/Admin/js/PIE_IE678.js"></script>
    <![endif]-->
    <link type="text/css" rel="stylesheet" href="~/Content/Admin/css/H-ui.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/Admin/css/H-ui.admin.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/Admin/font/font-awesome.min.css" />
    <!--[if IE 7]>
    <link href="~/Content/Admin/font/font-awesome-ie7.min.css" rel="stylesheet" type="text/css" />
    <![endif]-->
    <title>Banner管理</title>
</head>
<body>
    <nav class="Hui-breadcrumb"><i class="icon-home"></i> 首页 <span class="c-gray en">&gt;</span> 新闻中心 <span class="c-gray en">&gt;</span> Banner管理 <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="icon-refresh"></i></a></nav>
    <div class="pd-20">

        <div class="cl pd-5 bg-1 bk-gray mt-20">
            <span class="l"><a href="javascript:;" onClick="user_add('550','300','添加Banner','/Admin/Banner/AddBanner')" class="btn btn-primary radius"><i class="icon-plus"></i> 添加Banner</a></span>

        </div>
        <table class="table table-border table-bordered table-hover table-bg table-sort">
            <thead>
                <tr class="text-c">
                    <th width="80">ID</th>
                    <th width="300">Banner图片</th>
                    <th width="300">跳转地址</th>
                    <th>备注</th>
                    <th width="130">添加时间</th>
                    <th width="60">操作</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr class="text-c">
                    <td>@item.BannerId</td>
                    <td><image src="@item.Image" style="height:100px;width:200px" /></td>
                    <td><a href="@item.Url" target="_blank">@item.Url</a></td>
                    <td class="text-l">@item.Remark</td>
                    <td>@item.CreateTime</td>
                    <td>
                        @Html.ActionLink("删除", "Delete", new {  }) |
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <div id="pageNav" class="pageNav"></div>
    </div>
    <script type="text/javascript" src="~/Content/Admin/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/Admin/layer/layer.min.js"></script>
    <script type="text/javascript" src="~/Content/Admin/js/pagenav.cn.js"></script>
    <script type="text/javascript" src="~/Content/Admin/js/H-ui.js"></script>
    <script type="text/javascript" src="~/Content/Admin/plugin/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript" src="~/Content/Admin/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Content/Admin/js/H-ui.admin.js"></script>
    <script>
        function del(obj, id) {
            layer.confirm('确认要删除吗？', function (index) {
                $(obj).parents("tr").remove();
                layer.msg('已删除!', 1);
            });
        }
    </script>
</body>
</html>
